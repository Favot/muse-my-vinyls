
<div class="container d-flex justify-content-center">
  <div class="card text-white bg-dark mt-2 col-12 col-lg-8">
    <!-- vinyl.photo -->
    <img src="https://mdn.mozillademos.org/files/6457/mdn_logo_only_color.png" class="card-img-top" alt="...">
    <div id="card-vinyls" class="card-body">
      <div class="row d-flex justify-content-between">
        <div class="col-6">
          <h5 class="card-title"><%= @vinyl.title %></h5>
          <p class="card-title"><%= @vinyl.artist %></p>
        </div>
        <div class="col-6">
          <p class="card-text"> <%= @vinyl.price_per_day %> €/day</p>
          <p class="card-text"> <%= @vinyl.condition %></p>
        </div>
      </div>
      <p class="card-text"> <%= @vinyl.description %></p>
      <div class= "d-flex flex-column bd-highlight">
        <%= simple_form_for [ @vinyl, @renting ] do |f| %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.submit "Request", class: "btn btn-success", id: "total-price", data: { 'price-per-day': @vinyl.price_per_day } %>
        <% end %>
        <!-- <p data-price-per-day="<%= @vinyl.price_per_day %>" id="total-price">Total price:</p> -->        <%= link_to 'Cancel', vinyls_path, class: "btn btn-outline-dark mt-2" %>
      </div>
  </div>
</div>
</div>


