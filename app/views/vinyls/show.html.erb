<div class="container">
  <div class="show-desktop">
    <div class="card">
      <!-- vinyl.photo -->
      <div class="show-img-d">
        <% if @vinyl.photo.attached? %>
          <%= cl_image_tag @vinyl.photo.key, crop: :fill,class: "img-vinyl" %>
        <% end %>
      </div>
      <div class="card-body">
        <div class="row d-flex justify-content-between">
          <div class="col-6">
            <h5 class="card-title"><%= @vinyl.title %></h5>
            <p class="card-title"><%= @vinyl.artist %></p>
          </div>
          <div class="col-6">
            <p class="card-text"> <%= @vinyl.price_per_day %> €/day</p>
            <p class="card-text"> <%= @vinyl.condition %></p>
          </div>
        </div>
        <p class="card-text"> <%= @vinyl.description %></p>
        <div class= "d-flex flex-column bd-highlight">
          <%= simple_form_for [ @vinyl, @renting ] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <div class="btn-show-outside">
              <div class="form-actions">
                <%= f.submit "Request", class: "auth-btn btn btn-success", id: "total-price", data: { 'price-per-day': @vinyl.price_per_day } %>
              </div>
            </div>
          <% end %>
          <div class="btn-show-outside">
            <%= link_to 'Cancel', vinyls_path, class: "btn btn-outline-dark mt-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

