<!-- Profile -->
<%= cl_image_tag current_user.photo.key, width: 140, height: 140, crop: :fill, class: "big-avatar-square" %>
<h4 class="text-center">
  <%= current_user.first_name.capitalize %>
  <%= current_user.last_name.capitalize %>
</h4>

<!-- Tabs -->

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="true">pending</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="accepted-tab" data-bs-toggle="tab" data-bs-target="#accepted" type="button" role="tab" aria-controls="accepted" aria-selected="false">Accepted</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="declined-tab" data-bs-toggle="tab" data-bs-target="#declined" type="button" role="tab" aria-controls="declined" aria-selected="false">Declined</button>
  </li>
</ul>

<!-- Tabs content -->

<div class="tab-content" id="myTabContent">

  <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">


<!-- Display Pending -->
<h5>Pending Requests</h5>

<% @rentings.each do |renting| %>
  <% if renting.status == "Pending" %>

    <div class="card-product">
      <!-- vinyl.photo -->
      <% if renting.vinyl.photo.attached? %>
        <%= cl_image_tag renting.vinyl.photo.key, width: 110, height: 110, crop: :fill %>
      <% else %>
        <%= image_tag "https://via.placeholder.com/110" %>
      <% end %>
      <!-- Text -->
      <div class="card-product-infos">
        <h2><%= renting.vinyl.title %></h2>
        <p><%= renting.start_date %> - <%= renting.end_date %></p>
        <p>Owner: <%= renting.vinyl.owner.first_name %></p>
      </div>
      <div class="card-product-price">
        <p><%= renting.total_price %> €</p>
      </div>

    </div>
<% end %>
<% end %>



    content of pending
  </div>

  <div class="tab-pane fade" id="accepted" role="tabpanel" aria-labelledby="accepted-tab">

