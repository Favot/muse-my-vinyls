<!-- Profile -->
<%= cl_image_tag current_user.photo.key, width: 140, height: 140, crop: :fill, class: "big-avatar-square" %>
<h4 class="text-center">
  <%= current_user.first_name.capitalize %>
  <%= current_user.last_name.capitalize %>
</h4>

<!-- Main Tabs Menu (w/o JS file) -->
<ul class="nav nav-tabs" id="myTab" role="tablist">

  <div id="no-active-tab-border">
  <li class="nav-item-big">
    <a class="nav-link" id="submitted-tab" data-toggle="tab" href="#submitted" role="tab" aria-controls="submitted" aria-selected="false">
      Submitted
    </a>
    <!-- Hidden Btn -->
    <%= link_to '', rentings_path, class: "btn", id: "hidden-btn" %>
  </li>
</div>
    <div id="incoming-active-tab-border">
  <li class="nav-item-big">
    <a class="nav-link active" id="incoming-tab" data-toggle="tab" href="#incoming" role="tab" aria-controls="incoming" aria-selected="true">
      Incoming
    </a>
  </li>
  </div>
</ul>

<!-- 1 Main Tabs Content -->
<div class="tab-content">

  <!-- Main Tabs Content (submitted)
  <div class="tab-pane" id="submitted" role="tabpanel" aria-labelledby="submitted-tab">
  </div> -->

  <!-- 2 Main Tabs Content (incoming) -->
  <div class="tab-pane active" id="incoming" role="tabpanel" aria-labelledby="incoming-tab">

    <!-- 3 Sub Tabs Menu (w/ tabs.js) -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="true">
          Pending
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="accepted-tab" data-bs-toggle="tab" data-bs-target="#accepted" type="button" role="tab" aria-controls="accepted" aria-selected="false">
          Accepted
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="declined-tab" data-bs-toggle="tab" data-bs-target="#declined" type="button" role="tab" aria-controls="declined" aria-selected="false">
          Declined
        </button>
      </li>
    </ul>
    <!-- Sub Tabs Content  -->
    <div class="tab-content" id="myTabContent">
      <!-- Display Pending -->
      <div class="tab-pane fade show active" id="pending" role="tabpanel" aria-labelledby="pending-tab">
        <%= render 'shared/rentings_validation', data: @pending_incoming_rentings %>
      </div>
      <!-- Display Accepted -->
      <div class="tab-pane fade" id="accepted" role="tabpanel" aria-labelledby="accepted-tab">
        <%= render 'shared/rentings_validation', data: @accepted_incoming_rentings %>
      </div>
      <!-- Display Declined -->
      <div class="tab-pane fade" id="declined" role="tabpanel" aria-labelledby="declined-tab">
        <%= render 'shared/rentings_validation', data: @declined_incoming_rentings %>
      </div>
    </div>
    <!-- /3 -->

  </div>
  <!-- /2 -->

</div>
<!-- /1 -->
